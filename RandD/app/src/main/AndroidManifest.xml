<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dineshkota.randd" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21"
        />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentSendActivity"
            android:label="@string/title_activity_student_send" >
        </activity>
        <activity
            android:name=".ProfReceiveActivity"
            android:label="@string/title_activity_prof_receive" >
        </activity>
        <activity
            android:name=".SendVoiceActivity"
            android:label="@string/title_activity_send_voice" >
        </activity>
    </application>

</manifest>
